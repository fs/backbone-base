.articles
  .media
    margin: 0 0 30px 0
    padding: 0 0 20px 0
    border-bottom: 1px solid $lightGreyColor
    text-align: justify
    font-size: 15px
    position: relative

    .close
      position: absolute
      top: -5px
      right: 0

    .comments-count
      float: right
      height: 34px
      line-height: 34px

    .comments
      padding: 20px 0

    .media
      font-size: 12px
      padding: 8px
      border: 1px dashed $lightGreyColor
      border-radius: 4px

      .media-object
        background-size: cover
        border-radius: 4px
        width: 44px
        height: 44px

.articles-list
  li
    display: block
    clear: both

    h4
      float: left

    span
      float: left
      margin: 10px 0 10px 10px
      display: block
      font-style: italic
      color: $redFontColor

.write-article
  position: relative
  min-height: 100px

  .avatar-container
    position: absolute
    left: 0
    top: 0

    .avatar
      background-size: cover
      width: 100px
      height: 100px

  .text-container
    padding-left: 120px
    width: 100%
    display: inline-block

    textarea
      display: block
      width: 100%
      height: 140px
      margin: 10px 0px

    input
      float: right
